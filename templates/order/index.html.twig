{% extends 'base.html.twig' %}

{% block body_id 'blog_index' %}

{% block main %}
    {% for order in orders %}
        <article class="well">
            <h2>
                <a href="{{ path('order_info', {slug: order.slug}) }}">
                    {{ order.DateCreated|format_datetime('medium', 'short', '', 'UTC') }}
                </a>
            </h2>
            <p>{{ order.total }}</p>
        </article>
    {% else %}
        <div class="well">no orders found</div>
    {% endfor %}

        <div class="navigation text-center">
            {{ knp_pagination_render(orders)}}
        </div>
{% endblock %}

