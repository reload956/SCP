{% extends 'base.html.twig' %}

{% block body_id 'blog_index' %}

{% block main %}
    {% for product in products %}
        <article class="well">
            <h2>
                <td><img src="/public/uploads/brochures/{{ product.image }}" style="width: 100px;"></td>
                <a href="{{ path('product_info', {slug: product.slug}) }}">
                    {{ product.name }}
                </a>
                <a href="{{ path('cart_add',{slug: product.slug}) }}"class="btn btn-primary" type="submit" style="position:absolute;right: 40px">
                    <i class="fa fa-money" aria-hidden="true"></i>
                    {{ product.price }}
                </a>
            </h2>

            <p>{{ product.summary }}</p>
            {{ include('product/_product_tags.html.twig') }}
        </article>
    {% else %}
        <div class="well">no products found</div>
    {% endfor %}

        <div class="navigation text-center">
            {{ knp_pagination_render(products)}}
        </div>
{% endblock %}

{% block sidebar %}
    <h1>Categories</h1>
        {% for category in categories %}
            <li>
                <a href="{{ path('category_search', {id: category.id}) }}" class="btn btn-primary" style="width: 200px">
                    <i class="fa fa-cart"></i>{{ category.name }}
                </a>
            </li>
        {% endfor %}
{% endblock %}