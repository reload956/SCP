{% extends 'base.html.twig' %}

{% block body_id 'blog_post_show' %}

{% block main %}
<article class="well">
    <td><img src="public\uploads\brochures\{{ product.image }}"style="width: 250px;margin-right: 50%">
        <a href="{{ path('cart_add',{slug: product.slug}) }}"class="btn btn-primary" type="submit" style="margin-right: 10px">
            <i class="fa fa-money" aria-hidden="true"></i>
            {{ product.price }}
        </a>
    </td>

        <h1>{{ product.name }}</h1>

        {{ include('product/_product_tags.html.twig') }}
</article>
    <article class="well">
    <i class="fa fa-info">
        {{ product.description|markdown_to_html}}
    </i>

</article>



    <div id="post-add-comment" class="well">
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            {{ render(controller('App\\Controller\\ProductController::commentForm', {'id': product.id})) }}
        {% else %}
            <p>
                <a class="btn btn-success" href="{{ path('app_login', {'redirect_to': app.request.pathInfo}) }}">
                    <i class="fa fa-sign-in" aria-hidden="true"></i> Login
                </a>
                only authorized users can publish comments
            </p>
        {% endif %}
    </div>

    <h3>
        <i class="fa fa-comments" aria-hidden="true"></i>  amount of comments {{product.comments|length}}
    </h3>

    {% for comment in product.comments %}
        <div class="row post-comment">
            <a name="comment_{{ comment.id }}"></a>
            <h4 class="col-sm-3">
                <strong>{{ comment.author.username }}</strong> commented on
                <strong>{{ comment.publishedAt|format_datetime('medium', 'short', '', 'UTC') }}</strong>
            </h4>
            <div class="col-sm-9">
                {{ comment.content|markdown_to_html}}
            </div>
        </div>
    {% else %}
        <div class="post-comment">
            <p>no comments yet</p>
        </div>
    {% endfor %}
{% endblock %}

{% block sidebar %}

{% endblock %}